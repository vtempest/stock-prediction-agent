# Database - Turso (LibSQL)
# For local development, use: file:./local.db
# For production, use your Turso database URL from: turso db create <database-name>
DATABASE_URL=file:./local.db
# For Turso remote database, get auth token from: turso db tokens create <database-name>
DATABASE_AUTH_TOKEN=

# Better Auth Secret (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here-min-32-chars

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# Agent API Endpoints
# =============================================================================

# Unified API Gateway (recommended)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Individual Agent Services (optional if using gateway)
NEXT_PUBLIC_NEWS_RESEARCHER_URL=http://localhost:8002
NEXT_PUBLIC_DEBATE_ANALYST_URL=http://localhost:8001

# Alpaca MCP Server (for trading)
NEXT_PUBLIC_ALPACA_MCP_URL=http://localhost:3001

# Alpaca Trading API Keys (paper trading recommended for testing)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_API_SECRET=your-alpaca-api-secret
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# =============================================================================
# LLM Provider API Keys
# =============================================================================

# Default LLM Provider (options: groq, openai, anthropic)
# If not set, will auto-detect based on which API key is available
NEXT_PUBLIC_LLM_PROVIDER=groq

# Groq (recommended for fast, cost-effective inference)
GROQ_API_KEY=gsk_...
NEXT_PUBLIC_GROQ_DEEP_THINK_MODEL=llama-3.1-70b-versatile
NEXT_PUBLIC_GROQ_QUICK_THINK_MODEL=llama-3.1-8b-instant

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
GOOGLE_API_KEY=AIza...

# OpenRouter
OPENROUTER_API_KEY=sk-or-...

# =============================================================================
# Data Source API Keys
# =============================================================================

# Alpha Vantage (for stock data)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key

# Finnhub (for financial data)
FINNHUB_API_KEY=your-finnhub-key

# Firecrawl (for web scraping)
FIRECRAWL_API_KEY=your-firecrawl-key
